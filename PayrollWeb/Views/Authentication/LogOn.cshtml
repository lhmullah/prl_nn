@model PayrollWeb.ViewModels.LogOnModel
  <style type="text/css">
      .main-block {
          width: 600px;
          margin: 0px auto;
      }

      body {
          background: url(../themes/images/loginBg.png) repeat 0 0;
          background-size: cover;
            background-position: center;
      }

      .block-body {
          padding: 20px 10px;
      }

      .login-form {
          float: left;
          width: 300px;
      }

      label {
          float: left;
          width: 80px;
          margin: 5px 0px;
      }

      .login-text {
          float: left;
          width: 200px;
      }

      .remember-me {
          width: 235px;
      }

          .remember-me a {
              color: #333333;
          }

      input[type="checkbox"] {
          margin-top: 0px;
      }

      .well-login {
          min-height: 20px;
          padding: 19px;
          margin-bottom: 20px;
          border: 1px solid #ffffff;
          border-radius: 10px;
          background: rgba(191, 245, 215, 0.4); /* Old browsers */
      }
  </style>
@{
    ViewBag.Title = "Log On";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div style="text-align:center">@Html.ValidationSummary(true, "Login was unsuccessful. Please correct the following error.")</div>
@using (Html.BeginForm())
{
    <br />
    <br />
    <br />
    <div class="main-block well-login">
			<div class="block-body">
					<form>
                        <div  class="login-form" style="margin-top:30px;">
						<label style="color:#203d75">Username</label>
						<div class="editor-field">
                            @Html.TextBoxFor(m => m.UserName)
                            @Html.ValidationMessageFor(m => m.UserName)
                        </div>
						<label style="color:#203d75">Password</label>
						<div class="editor-field">
                            @Html.PasswordFor(m => m.Password)
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>
						@*<label class="remember-me" style="color:white">@Html.CheckBoxFor(m => m.RememberMe) Remember me </label>*@
						<input type="submit" class="btn" style="float:right; color:#203d75" value="Login" >
						@*<label id="chkRemember" class="remember-me" style="color:white"><a href="#" style="color:white">Forgot your password?</a></label>*@
						@*<label class="remember-me"><a href="~/Authentication/ForgotPassword">Forgot your password?</a></label>*@
                        </div>
					</form>
					
					<div style="margin:0px 0 0 20px;float:left;width:24px;height:164px;"> <img src="Images/v_grad.png" ></div>
					<div style="margin:0px 0 0 16px;float:left;width:220px;"> <img src="Images/login_logo.png" ></div>
					<div class="clearfix"></div>
			</div>
		</div>
        <br />
         <div style="text-align:center; color:black"><p style=" font-weight:bold; padding: 0px; margin: 0px;">Copyright &copy; @DateTime.Now.Year <a href="https://www.novonordisk.com" target="_blank">Novo Nordisk Pharma (Pvt.) Ltd</a> All Rights Reserved.</p>Developed & Maintained by<p style="color:maroon"><a href="http://www.recombd.com" target="_blank">ReCom Consulting Ltd.</a></p></div>        
}
