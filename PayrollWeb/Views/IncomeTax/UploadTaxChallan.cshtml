@using (Html.BeginForm("UploadTaxChallan", "IncomeTax", null, FormMethod.Post, new { enctype = "multipart/form-data", id = "fileupload" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
  <fieldset>
   <legend>Challan Upload View</legend>
    <table style="border-collapse: separate; border-spacing: 3px;">
      <tr>
            <td style="">
                @Html.Label("Year")
            </td>
            <td style="width: 15px"></td>
            <td style="">
                @Html.DropDownListFor(model => model.Year, new SelectList(@ViewBag.Years), "---Select Year---")
                @Html.ValidationMessageFor(model => model.Year)  
            </td>
        </tr>
       <tr>
            <td style="">
                @Html.Label("Month")
            </td>
            <td style="width: 15px"></td>
            <td style="">
                @Html.DropDownListFor(model => model.Month, new SelectList(@ViewBag.Months,"Value","Key"), "---Select Month---") 
                @Html.ValidationMessageFor(model => model.Month)   
            </td>
        </tr>

        <tr>
            <td>
                @Html.LabelFor(model => model.FiscalYear)
            </td>
            <td style="width: 15px"></td>
            <td>
                @Html.DropDownListFor(model => model.FiscalYear, new SelectList(@Model.FiscalYears, "id", "fiscal_year"), "Select Fiscal Year")
                @Html.ValidationMessageFor(model => model.FiscalYear)
            </td>
        </tr>
        <tr>
            <td>
                @Html.Label("Upload File")
            </td>
            <td style="width: 15px"></td>
            <td>
                <input type="file" id="uploadFile" name="uploadFile" class="" />
            </td>
        </tr>
        <tr>
            <td>
               
            </td>
            <td style="width: 15px"></td>
            <td >
                <input style="margin-top:10px" type="submit" value="Upload" id="btnSubmitTaxChallanFile" class="btn btn-primary" /> 
                <input style="margin-top:10px;width:120px;" onclick="GetFormat()" value="Import Format" id="" class="btn btn-success "/> 
            </td>
        </tr>
    </table>
    </fieldset>   
}


