@using (Html.BeginForm("Index", "Employee", new { @class = "form-search" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div style="width: 100%">
        <table style="border-collapse: separate; border-spacing: 3px;">
        <tr>
            <td style="padding-left: 5px; padding-bottom: 5px">
                @Html.Label("Search employee")
            </td>
            <td style="padding-left: 5px; padding-bottom: 5px">
                <input type="text" autocomplete="off" data-provide="typeahead" id="aa" style="width: 206px" />
            </td>
            <td style="padding-left: 5px; padding-bottom: 5px">
                <label for="EmpNo">Or put Staff Id</label>
            </td>
            <td style="padding-left: 5px; padding-bottom: 5px">
                <input type="text" id="Emp_No" name="Emp_No" style="width: 100px" />
            </td>
            <td style="padding-left: 10px; padding-bottom: 15px">
                <input class="btn btn-success" type="submit" name="sButton" value="Search" style="width: 115px"/>
                <input type="hidden" name="empid" id="empid" />
            </td>
            <td style="padding-left: 10px; padding-bottom: 15px">
                <a class="btn btn-primary" style="width:95px" href="@Url.Action("Create")"><i class="icon-plus"></i> Create New </a>
            </td>
        </tr>
        <tr>
            <td style="padding-left: 5px; padding-bottom: 5px"></td>
            <td style="padding-left: 5px; padding-bottom: 5px"></td>
            <td style="padding-left: 5px; padding-bottom: 5px"></td>
            <td style="padding-left: 5px; padding-bottom: 5px"></td>
            <td style="padding-left: 10px; padding-bottom: 15px;">
                <input  class="btn btn-success"  type="button" onclick="GetFormat()" value="Import Format" style="width: 115px" />
            </td>
            <td style="padding-left: 10px; padding-bottom: 15px;">
                <a class="btn btn-primary" style="width:95px" href="@Url.Action("EmpImport")"><i class="icon-plus"></i> Import </a>
            </td>
        </tr>
    </table>
    </div>
}

<table class="table table-striped table-condensed">
    <tr>
        <th>Emp ID</th>
        <th>Employee Name</th>
        <th>Designation</th>
        <th>Cost Centre</th>
        <th>&nbsp;&nbsp;&nbsp;Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="font-size: 12px">
                @Html.DisplayFor(modelItem => item.emp_no)
            </td>
            <td style="font-size: 12px">
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td style="font-size: 12px">
                @Html.DisplayFor(modelItem => item.prl_employee_details.OrderByDescending(x => x.id).First().prl_designation.name)
            </td>
            <td style="font-size: 12px">
                @Html.DisplayFor(modelItem => item.prl_employee_details.Where(x => x.emp_id == item.id).First().prl_cost_centre.cost_centre_name)
            </td>
            <td style="font-size: 12px">
                <a class="btn btn-primary" href="@Url.Action("Edit", "Employee", new { id = item.id })" ><i class="icon-pencil" style="padding-top: 2.5px" title="Edit"></i></a>
               <a class="btn btn-success" href="@Url.Action("Details", "Employee", new { id = item.id })"><i class="icon-link" style="padding-top: 2.5px" title="Details"></i></a>
                @*<a class="btn btn-success" href="@Url.Action("Details", "Employee", new { id = item.id })"><span class="glyphicon glyphicon-eye-open"></span></a>*@
            </td>
        </tr>
    }

</table>
<div id='Paging' style="text-align: center">
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
    of @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Paging", "Employee", new { page }))
</div>

@section PageSpecificJs
{
    
    <script src="~/Scripts/jquery-2.0.3.min.js"></script>
    <link href="~/Content/examples.css" rel="stylesheet" />
    <script type="text/javascript" src="~/Scripts/typeahead.js"></script>
    <script type="text/javascript" src="~/Scripts/hogan-2.0.0.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>

    <script type="text/javascript">
        var q = '@Url.Action("GetEmployeeSearch", "Employee")';
        q = q + '?query=%QUERY';
        $("#aa").typeahead({
            name: 'SearchEmployeeData',
            limit: 10,
            valueKey: 'name',
            engine: Hogan,
            remote: { url: q }
        }).on("typeahead:selected", function ($e, datum) {
            var id = 0;
            id = datum['id'];
            $('#empid').val(id);
        });

        function GetFormat() {
            window.open("/Employee/GetEmpDataUplodSample", "_blank");
        };
    </script>
}
