@model List<PayrollWeb.ViewModels.SalaryReview>
<table class="table table-striped">
    <tr>
        <th>Basic Salary</th>
        <th>Effictive From</th>
        <th>Reason</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="text-align:left">
            @Html.DisplayFor(modelItem => item.new_basic)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.effective_from)*@
            @Convert.ToDateTime(item.effective_from).ToString("dd-MMM-yyyy")
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.increment_reason)
        </td>
    </tr>
}
</table>
