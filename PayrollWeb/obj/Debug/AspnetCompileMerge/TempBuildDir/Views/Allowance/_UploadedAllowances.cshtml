@using PagedList.Mvc;
@model PagedList.IPagedList<PayrollWeb.ViewModels.AllowanceUploadData>

<table class="table table-striped table-bordered table-condensed">
    <tr>
        <th colspan="3" style="text-align: center;">
           
        </th>
        
    </tr>
    <tr>
        <th>
            Employee ID
        </th>
        <th>
           Employee Name
        </th>
        <th>
            Amount 
        </th>
        <th>
            Allowance Name
        </th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.prl_employee.emp_no)
                @Html.Hidden("AllowanceUploadData.emp_no",item.prl_employee.emp_no)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.prl_employee.name)
                @Html.Hidden("AllowanceUploadData.name",item.prl_employee.name)
            </td>
            <td>
                <a href="#" id="AllowanceUploadData.@item.id" data-name="amount" data-type="text"  data-pk="@item.id" data-url="@Url.Action("UpdateRecord","Allowance")" data-title="Enter Amount">@item.amount</a>
                @Html.Hidden("AllowanceUploadData.amount",item.amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.prl_allowance_name.allowance_name)
                @Html.Hidden("AllowanceUploadData.allowance_name_id",item.prl_allowance_name.id)
            </td>
        </tr>
    }

</table>

<div id='Paging' style="text-align:center">
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
        of @Model.PageCount

        @Html.PagedListPager(Model, page => Url.Action("EditDataPaging","Allowance", new {did=@ViewBag.did,dt=@ViewBag.dt,page }))
</div>
