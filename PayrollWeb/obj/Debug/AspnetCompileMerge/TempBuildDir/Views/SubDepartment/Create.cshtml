@model PayrollWeb.ViewModels.SubDepartment

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutDetailsPage.cshtml";
}


@section PageBanner
{
    Add Sub Department
}


@using (Html.BeginForm("Create","SubDepartment",FormMethod.Post)) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

        <div class="editor-label">
            @Html.LabelFor(model => model.department_id)
        </div>
        <div class="editor-field">
             @Html.DropDownListFor(x => x.department_id, new SelectList(@ViewBag.AllDepartments, "id", "name"), "---Select---")
             @Html.ValidationMessageFor(model => model.department_id)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.name)
            @Html.ValidationMessageFor(model => model.name)
        </div>
    
        <p>
            <input class="btn btn-success" type="submit" value="Create" />
        </p>
    
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

