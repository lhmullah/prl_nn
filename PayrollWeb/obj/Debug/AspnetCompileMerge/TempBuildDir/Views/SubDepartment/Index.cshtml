@using PayrollWeb.ViewModels
@model IEnumerable<PayrollWeb.ViewModels.SubDepartment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutDetailsPage.cshtml";
}

@section PageBanner
{
    Department Details
}


<div class="" style="float:right;">
    <a class="btn btn-primary" href="@Url.Action("Create")"><i class="icon-plus"></i> Add New </a>
</div>

<br style="clear: both;"/>
    
    @{
        if(TempData.ContainsKey("msg"))
        {
            var res = (OperationResult)TempData["msg"];
            if (res.IsSuccessful)
            {
                <div id="notifyUser" class="alert alert-success">
			    <button data-dismiss="alert" class="close" type="button">×</button>
			    <div>@res.Message </div>
                </div>    
            }
            else
            {
                <div id="notifyUser" class="alert alert-error">
			    <button data-dismiss="alert" class="close" type="button">×</button>
			    <div>@res.Message </div>
                </div> 
            }
        }
    }
<fieldset>
    <legend>List of Departments</legend>

    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.department_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                Action
            </th>
        </tr>
        @foreach ( var subDept in Model)
            {
              <tr>
                  <td>
                      @Html.DisplayFor(sDept=> subDept.id)
                  </td>
                  <td>
                      @Html.DisplayFor(sDept=> subDept.prl_department.name)
                  </td>
                  <td>
                      @Html.DisplayFor(sDept=> subDept.name)
                  </td>
                  <td>
                      @Html.ActionLink("Edit","Edit","SubDepartment",new{id = subDept.id},null)
                      @Html.ActionLink("Delete", "Delete", "SubDepartment", new { id = subDept.id }, new { onclick = "DeleteSubDepartment(this);return false;" })
                  </td>
              </tr>
           }
    </table>
</fieldset>

<div id="dltSubDept" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-body">
    <p>Are you sure you want to delete this Sub Department?</p>
    </div>
    <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button id="btnDltSubDept" class="btn btn-primary">Delete</button>
    </div>
</div>

@section PageSpecificJs
{
    <script type="text/javascript">
        function DeleteSubDepartment(el)
        {
            $('#dltSubDept').modal('show');

            $('#btnDltSubDept').click(function () {
                $('#dltSubDept').modal('hide');
                var test = $(el).attr('href');
                document.location.href = test;
            });
        }
    </script>
}




