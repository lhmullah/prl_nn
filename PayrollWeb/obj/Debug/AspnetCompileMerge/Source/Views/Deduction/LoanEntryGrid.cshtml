@using PagedList.Mvc;
@using PayrollWeb.ViewModels

@model PagedList.IPagedList<PayrollWeb.ViewModels.LoanEntry>

@{
    ViewBag.Title = "LoanEntryGrid";
    Layout = "~/Views/Shared/_LayoutDetailsPage.cshtml";
}
@section PageBanner
{
    Employee Loan Information
}

@*<div class="" style="float: right; margin-bottom: 10px;">
    
</div>
<br style="clear: both;" />*@

@{
    if (TempData.ContainsKey("msg"))
    {
        var res = (OperationResult)TempData["msg"];
        if (res.IsSuccessful)
        {
        <div id="notifyUser" class="alert alert-success">
            <button data-dismiss="alert" class="close" type="button">×</button>
            <div>@res.Message </div>
        </div>    
        }
        else
        {
        <div id="notifyUser2" class="alert alert-error">
            <button data-dismiss="alert" class="close" type="button">×</button>
            <div>@res.Message </div>
        </div> 
        }
    }
}

@using (Html.BeginForm("LoanEntryGrid", "Deduction", new { @class = "form-search" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <table style="border-collapse: separate; border-spacing: 3px;">
        <tr>
            <td style="padding-bottom:5px">
                @Html.Label("Search employee")
            </td>
            <td style="padding-left:5px">
                <input type="text" autocomplete="off" data-provide="typeahead" id="aa" style="width: 220px" />
            </td>

            <td style="padding-bottom:5px">
            </td>

            <td style="padding-left:10px; padding-bottom:12px">
                <input class="btn btn-success" type="submit" name="sButton" value="Search" />
                <input type="hidden" name="empid" id="empid"/>
            </td>
            <td style="padding-left:5px">
                
            </td>
            <td style="padding-left:15px; padding-bottom:12px">
                <a class="btn btn-primary" href="@Url.Action("LoanEntry")"><i class="icon-plus"></i>Add New </a>
            </td>
        </tr>
    </table>
}

<table class="table table-striped table-condensed">
    <tr>
        <th style="text-align:center">Employee ID</th>
        <th style="text-align:center">Loan Type</th>
        <th style="text-align:center">Start Date</th>
        <th style="text-align:center">End Date</th>
        <th style="text-align:center">Principal</th>
        <th style="text-align:center">Installment</th>
        <th style="text-align:center">Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="font-size:15px; text-align:center">
            @Html.DisplayFor(modelItem => item.prl_employee.emp_no)
        </td>
        <td style="font-size:15px; text-align:center">
            @Html.DisplayFor(modelItem => item.prl_deduction_name.deduction_name)
        </td>
        <td style="font-size:15px; text-align:center">
            @Html.DisplayFor(modelItem => item.loan_start_date)
        </td>
        <td style="font-size:15px; text-align:center">
            @Html.DisplayFor(modelItem => item.loan_end_date)
        </td>
         <td style="font-size:15px; text-align:center">
            @Html.DisplayFor(modelItem => item.principal_amount)
        </td>
        <td style="font-size:15px; text-align:center">
            @Html.DisplayFor(modelItem => item.monthly_installment)
        </td>
        <td style="font-size:15px; text-align:center">
            @Html.ActionLink("Edit", "EditLoanEntry","Deduction", new { id=item.id },null)
        </td>
    </tr>
}

</table>
<div id='Paging' style="text-align:center">
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
        of @Model.PageCount

        @Html.PagedListPager(Model, page => Url.Action("Paging","Deduction", new { page }))
</div>

@section PageSpecificJs
{
    <link href="~/Content/examples.css" rel="stylesheet" />   
    <script type="text/javascript" src="~/Scripts/typeahead.js"></script>
    <script type="text/javascript" src="~/Scripts/hogan-2.0.0.min.js"></script>

    <script type="text/javascript">
        var q = '@Url.Action("GetEmployeeSearch","Employee")';
        q = q + '?query=%QUERY';
        $("#aa").typeahead({
            name: 'SearchEmployeeData',
            limit: 10,
            valueKey: 'name',
            engine: Hogan,
            remote: { url: q }
        }).on("typeahead:selected", function ($e, datum) {
            var id = 0;
            id = datum['id'];
            $('#empid').val(id);
        });
    </script>
}
