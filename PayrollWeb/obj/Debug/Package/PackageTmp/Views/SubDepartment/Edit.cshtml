
@model PayrollWeb.ViewModels.SubDepartment

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutDetailsPage.cshtml";
}

@section PageBanner
{
    Allowance Edit
}

    @using (Html.BeginForm("Edit", "SubDepartment"))
    {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

        @Html.HiddenFor(model => model.id)

        <div class="editor-label">
            @Html.LabelFor(model => model.department_id)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(x=> x.department_id, new SelectList(@ViewBag.AllDepartment,"id","name",@Model.department_id))
             @Html.ValidationMessageFor(model => model.department_id)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.name)
            @Html.ValidationMessageFor(model => model.name)
        </div>
        <p>
            <input class="btn btn-success" type="submit" value="Edit" />
        </p>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

