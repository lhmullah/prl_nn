@{
    if (TempData.ContainsKey("msg"))
    {
        var res = (PayrollWeb.ViewModels.OperationResult)TempData["msg"];
        if (res.IsSuccessful)
        {
            <div id="notifyUser" class="alert alert-success">
                <button data-dismiss="alert" class="close" type="button">×</button>
                <div>@res.Message </div>
            </div>    
        }
        else
        {
        <div id="notifyUser2" class="alert alert-error">
            <button data-dismiss="alert" class="close" type="button">×</button>
            <div>@res.Message </div>
        </div> 
        }
    }
}

@using (Html.BeginForm("GetEmployeeDeductions", "Deduction", FormMethod.Post, new { id = "searchForm", @class = "form-search" }))
{
    <input type="text"  autocomplete="off"  data-provide="typeahead"  placeholder="Write Employee ID or Name and then Select" style="width: 280px" id="aa"/>
    <input class="btn btn-success" name="sButton" type="submit" style="margin-top:7px" value="Search"/>
    <input type="hidden" name="empid" id="empid" value="0"/> //Default value pass 0 for Post validation
}

@section PageSpecificJs
{
    <link href="~/Content/examples.css" rel="stylesheet" />   
    <script type="text/javascript" src="~/Scripts/typeahead.js"></script>
    <script type="text/javascript" src="~/Scripts/hogan-2.0.0.min.js"></script>
    <script type="text/javascript">
        var q = '@Url.Action("GetEmployeeSearch","Deduction")';
        q = q + '?query=%QUERY';
        $("#aa").typeahead({
            name: 'SearchEmployeeData',
            limit: 10,
            valueKey: 'name',
            engine: Hogan,
            remote: { url: q}
        }).on("typeahead:selected", function ($e, datum) {
            var id = 0;
            id = datum['id'];
            $('#empid').val(id);
        });
        
        //Stop Enter key when id is empty
        $('#searchForm').on('keyup keypress', function (e) {
            var keyCode = e.keyCode || e.which;
            if (keyCode === 13) {
                var emp_id = $('#empid').val();
                console.log(emp_id);
                if (emp_id == NaN || emp_id == "" || emp_id == 0 || emp_id == null) {
                    e.preventDefault();
                    return false;
                }
            }
        });

    </script>
}

